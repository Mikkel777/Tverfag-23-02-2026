<html lang="no">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminPage</title>
    <link rel="stylesheet" href="/main.css">
</head>
<body>
    <%- include('templates/nav') %>
    <main class="container">
        <section>
            <h1>Rapporterte reviews</h1>
            <% reports.forEach(report => { %>
            <div class="review-card">
                <% if (report.reviewId) { %>

                    <h3><%= report.reviewId.sitename %></h3>
                    <p>Grunn: <%= report.reason %></p>
                    <p>Rapportert av: <%= report.reportedBy %></p>

                    <form action="/delete/<%= report.reviewId._id %>" method="POST">
                        <button>Slett review</button>
                    </form>

                <% } else { %>

                    <h3>Slettet vurdering</h3>
                    <p>Grunn: <%= report.reason %></p>
                    <p>Rapportert av: <%= report.reportedBy %></p>
                    <p><em>Denne vurderingen finnes ikke lenger.</em></p>

                <% } %>
            </div>
            <% }) %>
        </section>
    </main>
</body>
</html>
